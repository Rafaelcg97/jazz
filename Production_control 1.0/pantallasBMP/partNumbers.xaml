<Page x:Class="Production_control_1._0.pantallasBMP.partNumbers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production_control_1._0.pantallasBMP" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="partNumbers">
    <Grid>
        <!--#region filas/columnas-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <Button x:Name="btnAtras" Background="Transparent" BorderBrush="Transparent" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Image Source="/imagenes/atras.png" Width="50" Height="50"/>
        </Button>
        <Border Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="15" Margin="15,0,0,0" BorderBrush="Black" BorderThickness="2" CornerRadius="8">
            <Viewbox VerticalAlignment="Top">
                <StackPanel>
                    <Label FontWeight="Bold" FontSize="15" HorizontalContentAlignment="Center" Content="Categorias de PartNumbers" Margin="10,0,0,0"/>
                    <ListView x:Name="lstvCategorias">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nombre de la categoria" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="135" Text="{Binding categoria}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Subclase" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="65" SelectedItem="{Binding subPaquete}" ItemsSource="{Binding paquetes}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Tiempo unitario (min)" Width="125">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="110" Text="{Binding tiempoUnitario}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Tiempo paquete (min)" Width="135">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="110" Text="{Binding tiempoPaquete}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Complemento (min)" Width="135">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="110" Text="{Binding tiempoComplementario}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Célula" Width="122">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="110" SelectedItem="{Binding macroCategoria}" ItemsSource="{Binding macrocategorias}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Viewbox>
        </Border>
        <Border Grid.Row="2"  Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="15" Margin="15,0,0,0" BorderBrush="Black" BorderThickness="2" CornerRadius="8">
            <Viewbox VerticalAlignment="Top">
                <StackPanel>
                    <Label  FontWeight="Bold" FontSize="25" HorizontalContentAlignment="Center" Content="PartNumbers pendientes de clasificar"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                        <Label Content="Buscar PartNumber:         " FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="txtBuscarPartNumber" Width="200"/>
                    </StackPanel>
                    <ListView x:Name="lstvPartNumbers" MaxHeight="900" Width="650" BorderBrush="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Part Number" Width="230">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding partNumberNombre}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Categoria" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="110" SelectedItem="{Binding categoria}" ItemsSource="{Binding categorias}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Paquete" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <xctk:IntegerUpDown Value="{Binding cantidad}" Minimum="0" Maximum="5000" Width="65"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="SubClase" Width="105">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="90" SelectedItem="{Binding subPaquete}" ItemsSource="{Binding paquetes}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="btnAgregarPartNumber" Height="75" Width="100" Margin="7 " Background="Transparent" BorderBrush="Transparent">
                        <Image Source="/imagenes/disquete.png"/>
                    </Button>
                </StackPanel>
            </Viewbox>
        </Border>
        <Border Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="4" Grid.RowSpan="15" BorderBrush="Black" BorderThickness="2" Margin="25,0,15,0" CornerRadius="8">
            <Viewbox VerticalAlignment="Top">
                <StackPanel>
                    <Label FontWeight="Bold" FontSize="25" HorizontalContentAlignment="Center" Content="Historial de PartNumbers"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                        <Label Content="Buscar PartNumber:         " FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="txtBuscarPartNumberAgregado" Width="200" Height="20"/>
                    </StackPanel>
                    <ListView x:Name="lstvPartNumbersAgregados" MaxHeight="900" Width="600" BorderBrush="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Part Number" Width="230">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding partNumberNombre}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Categoria" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="110" SelectedItem="{Binding categoria}" ItemsSource="{Binding categorias}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Paquete" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <xctk:IntegerUpDown Value="{Binding cantidad}" Minimum="0" Maximum="5000" Width="65"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="SubClase" Width="105">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox Width="90" SelectedItem="{Binding subPaquete}" ItemsSource="{Binding paquetes}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Page>
