                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="buttonCerrarPopUpValidarSmed" Grid.Row="0" Grid.Column="10" Background="Transparent" BorderBrush="Transparent" Width="25" Height="25" Click="buttonCerrarPopUpValidarSmed_Click">
                        <Image Source="/imagenes/cerrar.png"/>
                    </Button>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="10" HorizontalAlignment="Center">
                        <Label Content="Validación de Acción:" FontWeight="Bold" FontSize="20"/>
                        <Label x:Name="labelNumeroAccionSmed" Content="0000" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                    <ListView x:Name="listViewListaMaterialesValidar" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="8" Grid.RowSpan="8">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="120" Header="Lote">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding lote}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="120" Header="Material">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding material}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="75" Header="Talla">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding talla}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="75" Header="Cantidad">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding cantidad}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--#region botones-->
                    <Button x:Name="buttonEliminarAccionSmed" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="12" Grid.RowSpan="3" Margin="0" Background="Transparent" BorderBrush="Transparent" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="buttonEliminarAccionSmed_Click">
                        <Image x:Name="imageEliminarSmed" Source="/imagenes/eliminar.png" Width="50" Height="50"/>
                    </Button>
                    <Button x:Name="buttonValidarAccionSmed" Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="12" Grid.RowSpan="3" Margin="0" Background="Transparent" BorderBrush="Transparent" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="buttonValidarAccionSmed_Click">
                        <Image x:Name="imageTerminarSmed" Source="/imagenes/comprobar.png" Width="50" Height="50"/>
                    </Button>
                    <!--#endregion-->
                </Grid>
            </Border>
        </Popup>
        <Popup x:Name="popUpAutorizar" Width="500" Height="400" AllowsTransparency="True" PlacementTarget="{Binding areaDeTrabajo}" Placement="Center" StaysOpen="False">
            <Border Background="White" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="buttonCerrarPopUpAutorizar" Grid.Column="10" Background="Transparent" BorderBrush="Transparent" Width="25" Height="25" Click="buttonCerrarPopUpAutorizar_Click">
                        <Image Source="/imagenes/cerrar.png"/>
                    </Button>
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="10" Grid.RowSpan="2" HorizontalAlignment="Center">
                        <Label Content="Cerrar Acción:  " FontWeight="Bold" FontSize="20" Padding="0"/>
                        <Label x:Name="labelNumeroAccionAutorizar" Content="0000" FontWeight="Bold" FontSize="20" Padding="0"/>
                    </StackPanel>
                    <Label Content="Autorización de solicitud" Grid.Row="3" Grid.ColumnSpan="10" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="25" Padding="0"/>
                    <PasswordBox x:Name="passAutorizar" Grid.Row="5" Grid.ColumnSpan="4" Grid.Column="3" VerticalContentAlignment="Center" PasswordChanged="passAutorizar_PasswordChanged"/>
                    <Label x:Name="labelCodigoAutorizaAuto" Content="*" Grid.Row="6" Grid.ColumnSpan="10" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="15" Padding="0"/>
                    <Button x:Name="buttonAutorizarSolicitud" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="8" Grid.RowSpan="2" Background="Transparent" BorderBrush="Transparent" Click="buttonAutorizarSolicitud_Click">
                        <Image Source="/imagenes/comprobar.png" Margin="0"/>
                    </Button>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Page>
