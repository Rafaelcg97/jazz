                <Label Content="Nombre de Empleado:" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="1" SizeChanged="letra_7" FontWeight="DemiBold"/>
                <Label Content="Código de Empleado:" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="1" SizeChanged="letra_7" FontWeight="DemiBold"/>
                <Label Content="Código de Máquina:" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="1" SizeChanged="letra_7" FontWeight="DemiBold"/>
