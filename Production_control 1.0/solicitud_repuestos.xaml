                <!--#endregion-->
                <!--#region etiquetas-->
                <Label Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="1" Grid.RowSpan="2" Content="Usuario:" FontWeight="Bold" SizeChanged="letra_7" />
                <Label Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="3" Grid.RowSpan="2" Content="Nombre:" FontWeight="Bold" SizeChanged="letra_7"/>
                <Label Grid.Column="7" Grid.ColumnSpan="10" Grid.Row="1" Grid.RowSpan="2" Content="----" FontWeight="Light"  SizeChanged="letra_7" x:Name="usuario_"/>
                <Label Grid.Column="7" Grid.ColumnSpan="11" Grid.Row="3" Grid.RowSpan="2" Content="----" FontWeight="Light"  SizeChanged="letra_7" x:Name="nombre_"/>
                <Label Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="7" Grid.RowSpan="2" Content="Máquina:" FontWeight="Bold" SizeChanged="letra_7" />
                <Label Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="17" Grid.RowSpan="2" Content="Repuesto:" FontWeight="Bold" SizeChanged="letra_7" />
                <!--#endregion-->

                <TextBox x:Name="buscar_maquina" Grid.Row="7" Grid.RowSpan="1" Grid.Column="7" Grid.ColumnSpan="9" Padding="0" SizeChanged="letra_7" TextChanged="buscar_maquina_TextChanged"/>
                <ListBox x:Name="maquina" Grid.Row="8" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="9" SizeChanged="letra_09"/>
                <TextBox x:Name="buscar_repuesto" Grid.Row="17" Grid.RowSpan="1" Grid.Column="7" Grid.ColumnSpan="9" Padding="0" SizeChanged="letra_7"/>
                <ListBox x:Name="repuesto" Grid.Row="18" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="9" SizeChanged="letra_09"/>
