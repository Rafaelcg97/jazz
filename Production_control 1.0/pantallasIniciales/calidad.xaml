                <Label Grid.ColumnSpan="10" Grid.Column="0" Grid.Row="8" Grid.RowSpan="2" Content="AQL Individual" FontSize="20" FontWeight="Bold" Foreground="Black" Margin="20,15,0,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
