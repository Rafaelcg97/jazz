                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Grid.Column="1" Grid.Row="1" Source="/imagenes/historialCalidad.png" Grid.ColumnSpan="8" Grid.RowSpan="8"/>
                <Label Grid.ColumnSpan="10" Grid.Column="0" Grid.Row="8" Grid.RowSpan="2" Content="AQL Semanal" FontSize="20" FontWeight="Bold" Foreground="Black" Margin="20,15,0,0" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
