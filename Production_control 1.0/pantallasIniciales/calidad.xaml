        </Border>
        <Border x:Name="BorderAQL" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="5"  BorderBrush="Black" BorderThickness="5" Background="Transparent" CornerRadius="8" MouseEnter="BorderMouseEnter" MouseLeave="BorderMouseLeave" MouseUp="BorderAQL_MouseUp">
