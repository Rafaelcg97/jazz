            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border x:Name="BorderAQLIndividual" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="5" Background="Transparent" CornerRadius="8" MouseEnter="BorderMouseEnter" MouseLeave="BorderMouseLeave" MouseLeftButtonUp="BorderAQLIndividual_MouseLeftButtonUp" >
