<UserControl x:Class="Production_control_1._0.pantallasIniciales.inicio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:Production_control_1._0.pantallasIniciales"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="15" Margin="0,10,0,0" FontFamily="calibri"  SizeChanged="Control_SizeChanged" Foreground="#FF1E5D1E" FontWeight="Bold" HorizontalAlignment="Center">Resumen Piso de Producción TEXOPS</Label>
        <Calendar Grid.Column="12" Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="4" x:Name="calendarFecha" SelectedDatesChanged="calendarFecha_SelectedDatesChanged"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="15" Grid.RowSpan="1" Orientation="Horizontal" VerticalAlignment="Center">
            <RadioButton x:Name="radioButtomDiurno" VerticalContentAlignment="Center"  Margin="20,0,0,0" Checked="radioButtomDiurno_Checked">
                <Label Content="Diurno" FontSize="20" FontWeight="Bold"/>
            </RadioButton>
            <RadioButton x:Name="radioButtomNocturno" VerticalContentAlignment="Center" IsChecked="False" Margin="20,0,0,0" Checked="radioButtomNocturno_Checked">
                <Label Content="Nocturno" FontSize="20" FontWeight="Bold"/>
            </RadioButton>
            <RadioButton x:Name="radioButtomExtra" VerticalContentAlignment="Center" IsChecked="False" Margin="20,0,0,0" Checked="radioButtomExtra_Checked">
                <Label Content="Extra" FontSize="20" FontWeight="Bold"/>
            </RadioButton>
        </StackPanel>

        <lvc:CartesianChart  Series="{Binding SeriesCollection}" LegendLocation="Left" x:Name="grafico" Grid.Row="3" Grid.ColumnSpan="9" Grid.RowSpan="11" Background="Transparent">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Modulos" Labels="{Binding Labels, StringFormat=\{0:d\}}" LabelsRotation="20">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="0"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Produccion" LabelFormatter="{Binding Formatter}" MinValue="0" ShowLabels="True">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="0"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
                <lvc:Axis Title="Eficiencia" LabelFormatter="{Binding Formatter2}" MinValue="0" Position="RightTop" ShowLabels="True">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="0"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY> 
        </lvc:CartesianChart>
        <ListView Grid.Row="3" Grid.Column="9" Grid.ColumnSpan="6" Margin="20,0,20,0" Grid.RowSpan="10" x:Name="listViewProduccionHora">
            <ListView.View>
                <GridView>
                    <!--#region coordinador-->
                    <GridViewColumn Header="Coordinador" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Path=coordinador}" Width="95" FontWeight="Bold" Foreground="#FF4E7495" FontSize="10"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region modulo-->
                    <GridViewColumn Header="Módulo" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=modulo}" Width="95"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region totalPiezas-->
                    <GridViewColumn Header="Total" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=piezas}" Width="50" Foreground="DarkRed" FontWeight="Bold" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h1-->
                    <GridViewColumn Header="H1" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h1}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h2-->
                    <GridViewColumn Header="H2" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h2}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h3-->
                    <GridViewColumn Header="H3" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h3}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h4-->
                    <GridViewColumn Header="H4" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h4}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h5-->
                    <GridViewColumn Header="H5" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h5}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h6-->
                    <GridViewColumn Header="H6" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h6}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h7-->
                    <GridViewColumn Header="H7" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h7}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h8-->
                    <GridViewColumn Header="H8" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h8}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h9-->
                    <GridViewColumn Header="H9" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h9}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h10-->
                    <GridViewColumn Header="H10" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h10}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h11-->
                    <GridViewColumn Header="H11" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h11}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                    <!--#region h12-->
                    <GridViewColumn Header="H12" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label  Content="{Binding Path=h12}" Width="30" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--#endregion-->
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
