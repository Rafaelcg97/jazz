<UserControl x:Class="Production_control_1._0.pantallasIniciales.inicio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:Production_control_1._0.pantallasIniciales"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="areaDeTrabajo" Background="#FF575656">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border  Grid.Column="11" Grid.ColumnSpan="4" Grid.RowSpan="14" Margin="25" CornerRadius="10" Background="DarkGray" Opacity="0.6">
            <StackPanel>
                <Label FontSize="25" FontWeight="Bold" FontFamily="Bauhaus 93" HorizontalAlignment="Center" Foreground="White">Acerca del Software</Label>
                <Image Source="/imagenes/logoJazz.png" MaxHeight="200" Margin="30" />
                <StackPanel Orientation="Horizontal">
                    <Label Margin="10" FontSize="15" FontWeight="Bold" Foreground="White">Nombre:</Label>
                    <Label Margin="10" FontSize="15" Foreground="White">Jazz-CCO</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Margin="10" FontSize="15" FontWeight="Bold" Foreground="White">Versión:</Label>
                    <Label Margin="10" FontSize="15" Foreground="White">1.8</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Margin="10,10,0,0" FontSize="15" FontWeight="Bold" Foreground="White">Base de Datos:</Label>
                    <Label Margin="10" FontSize="15" Foreground="White">Microsoft SQL Server Express</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Margin="10" FontSize="15" FontWeight="Bold" Foreground="White">Versión de Base:</Label>
                    <Label Margin="10" FontSize="15" Foreground="White">14.0.1000.169</Label>
                </StackPanel>
                <Label Margin="10" FontSize="15" FontWeight="Bold" Foreground="White">Desarrollado Por:</Label>
                <Label Margin="20,0,0,0" FontSize="15" Foreground="White">► Edwin Ortega</Label>
                <Label Margin="20,0,0,0" FontSize="15" Foreground="White">► Napoleón Cerón</Label>
                <Label Margin="20,0,0,0" FontSize="15" Foreground="White">► Rafael Castro</Label>
            </StackPanel>
        </Border>


        <Label FontSize="67" Grid.Column="2" Foreground="White" Grid.ColumnSpan="10" Grid.Row="3" Grid.RowSpan="2" HorizontalContentAlignment="Center" FontWeight="Bold">¡Bienvenido!</Label>
        <Border Grid.Row="4"  Grid.Column="5" Grid.ColumnSpan="4" Grid.RowSpan="6" Margin="50" CornerRadius="400" Background="DarkGray" Opacity="0.6"/>
        <Label x:Name="labelUsuario" FontSize="67" Grid.Column="2" Foreground="White" Grid.ColumnSpan="10" Grid.Row="9" Grid.RowSpan="2" HorizontalContentAlignment="Center" FontWeight="Bold" Margin="10">¡Bienvenido!</Label>
        <Label x:Name="labelHora" FontSize="67" Grid.Column="0" FontFamily="Arial" Foreground="White" Grid.ColumnSpan="10" Grid.Row="1" Grid.RowSpan="2" HorizontalContentAlignment="Left" FontWeight="Bold" Margin="15,0,0,0">----</Label>
        <Border Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="5" Margin="50" CornerRadius="10" Background="White" Opacity="0.3"/>
        <Border Grid.Row="7"  Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="7" Margin="50" CornerRadius="10" Background="DarkGray" Opacity="0.6">
            <StackPanel>
                
            </StackPanel>
    
        </Border>


        <StackPanel Grid.Row="15" Grid.ColumnSpan="10" Margin="10" Orientation="Horizontal" VerticalAlignment="Bottom">
            <xctk:ColorPicker Name="ClrPcker_Background" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged" Width="60"></xctk:ColorPicker>
        </StackPanel>

    </Grid>
</UserControl>
