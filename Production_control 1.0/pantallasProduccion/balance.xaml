            </Grid.ColumnDefinitions>
            <!--#endregion-->
            <Border BorderBrush="Black" BorderThickness="1" Margin="2" Padding="0" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="7" Grid.RowSpan="7">
                <Viewbox>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <Label Content="Fecha" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                            <Label Content="Estilo:" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                            <Label Content="Temporada:" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                            <Label Content="SAM:" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                            <Label Content="Modulo:" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                            <Label Content="Versión:" FontFamily="calibri" FontWeight="Bold" Padding="0" FontSize="12" Margin="0,3,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label x:Name="fecha_" Content="----" FontFamily="calibri" FontWeight="Medium" Padding="0" Margin="0,3,0,0"/>
                            <Label x:Name="estilo_" Content="----" FontFamily="calibri" FontWeight="Medium" Padding="0" Margin="0,3,0,0"/>
                            <Label x:Name="temporada_" Content="----" FontFamily="calibri" FontWeight="Medium" Padding="0" Margin="0,3,0,0"/>
                            <Label x:Name="sam_" Content="----" FontFamily="calibri" FontWeight="Medium" Padding="0" Margin="0,3,0,0"/>
                            <StackPanel Orientation="Horizontal"  Margin="0,3,0,0">
                                <ComboBox x:Name="modulo"  FontSize="12" Padding="4,0,0,0" FontFamily="calibri" FontWeight="Medium" Width="100" Height="16" SelectionChanged="modulo_SelectionChanged"/>
                                <Button x:Name="agregarOperariosGnerale" Click="agregarListaDeOperariosGenerale" Height="16" Width="31">
                                    <Image Source="imagenes/desconocido.png"/>
                                </Button>
                                <Button x:Name="agregar_operario" Click="agregar_operario_Click" Height="16" Width="31">
                                    <Image Source="/imagenes/nuevo_use.png"/>
                                </Button>
                                <Popup x:Name="datos_operario" Width="420" Height="150">
                                    <Border Background="#F9FAFA" CornerRadius="10">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <Label FontWeight="Bold" Background="#F9FAFA" Width="150" Margin="0,5,0,25">Código de Operario:</Label>
                                                <TextBox x:Name="codigo_op" Width="200" Margin="10,5,0,25" TextChanged="codigo_op_TextChanged" ></TextBox>
                                                <Button x:Name="revision" Width="30" Height="30" Margin="0,5,0,25" Background="Transparent" BorderBrush="Transparent" IsEnabled="False" Visibility="Hidden">
                                                    <Image Source="/imagenes/apply.ico"></Image>
                                                </Button>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Label FontWeight="Bold" Background="#F9FAFA" Width="150">Nombre de Operario:</Label>
                                                <TextBox x:Name="nombre_op" Width="200" Margin="10,0,0,0"></TextBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                                                <Button x:Name="agregar_op"  Width="30" Height="30" Margin="0,0,10,0" Background="Transparent" BorderBrush="Transparent" Click="agregar_op_Click">
                                                    <Image Source="/imagenes/agregar-usuario.png"></Image>
                                                </Button>
                                                <Button x:Name="no_nomb" Width="30" Height="30" Margin="10,0,10,0" Background="Transparent" BorderBrush="Transparent" Click="no_nomb_Click">
                                                    <Image Source="/imagenes/desconocido.png"></Image>
                                                </Button>
                                                <Button x:Name="agregar_cancel" Width="30" Height="30" Margin="10,0,0,0" Click="agregar_cancel_Click" Background="Transparent" BorderBrush="Transparent">
                                                    <Image Source="/imagenes/boton-x.png"></Image>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </StackPanel>
                            <TextBox x:Name="version_" FontFamily="calibri" FontWeight="Medium" KeyDown="solo_numeros" Height="16" Margin="0,3,0,0" TextChanged="version__TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="2"  Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="7" Padding="0">
                <Viewbox>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Piezas de la corrida:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Horas de corrida:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Operarios:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Eficiencia:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Piezas por hora:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Regenerar:"/>
                            <Label Padding="0" Width="150" Height="20" FontFamily="calibri" FontSize="15" FontWeight="Bold" Margin="0,4,0,0" Content="Modo:"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBox x:Name="piezas_de_corrida" Width="50" Height="20" Margin="2" FontFamily="calibri" FontSize="14" FontWeight="Medium" Padding="0" TextChanged="maquinaRequerimiento" KeyDown="solo_numeros" LostFocus="piezas_de_corrida_LostFocus"/>
                            <TextBox x:Name="horas_de_corrida" Width="50" Height="20" Margin="2" FontFamily="calibri"  FontSize="14" FontWeight="Medium" Padding="0"  TextChanged="maquinaRequerimiento" KeyDown="solo_numeros" LostFocus="horas_de_corrida_LostFocus"/>
                            <Label x:Name="operarios_" Width="50" Height="20" Margin="2" Content="0" FontFamily="calibri"  FontSize="14" FontWeight="Medium" Padding="0"/>
                            <Label x:Name="eficiencia_" Width="50" Height="20" Margin="2" Content="0" FontFamily="calibri"  FontSize="14" FontWeight="Medium" Padding="0"/>
                            <Label x:Name="piezas_por_hora" Width="50" Height="20" Margin="2" Content="0" FontFamily="calibri"  FontSize="14" FontWeight="Medium" Padding="0" />
                            <Button x:Name="regenerar" Width="50" Height="20" Padding="0" Margin="2" Background="Transparent" Click="regenerar_Click">
                                <Image Source="/imagenes/reordenar.png"/>
                            </Button>
                            <ToggleButton x:Name="btnModoTabla" Width="50" Height="20" Padding="0" Margin="2" Background="Transparent" Checked="btnModoTabla_Checked" Unchecked="btnModoTabla_Unchecked">
                                <ToggleButton.Style>
                                    <Style TargetType="{x:Type ToggleButton}">
                                        <Setter Property="Content" Value="Layout"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Content" Value="Tabla"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="2" Grid.Row="1" Grid.Column="12" Grid.RowSpan="7">
                <Slider x:Name="tamano"  Grid.Row="1" Grid.Column="12" Minimum="0" Maximum="2500" Orientation="Vertical" Grid.RowSpan="7" HorizontalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
            </Border>
            <!--#region control_tab_de_datos-->
            <TabControl  Grid.Row="8" Grid.RowSpan="40" Grid.Column="0" Grid.ColumnSpan="13">
                <!--#region lista_de_operaciones-->
                <TabItem Header="Operaciones" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                    <ListView x:Name="Operaciones" HorizontalAlignment="Stretch" FontSize="10" SelectionMode="Extended" PreviewMouseLeftButtonDown="obtenerDatosListView">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Operacion" DisplayMemberBinding="{Binding Path=tituloOperacion}" Width="275" />
                                <GridViewColumn Header="Asignado">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Grid.Column="4">
                                                <ProgressBar  Minimum="0" Maximum="1.01" Value="{Binding asignadoOperacion}" x:Name="progressBarAsignado" Loaded="progressBarAsignado_Loaded" Width="100"/>
                                                <TextBlock Text="{Binding asignadoOperacion, StringFormat=p1}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="SAM" DisplayMemberBinding="{Binding Path=samOperacion}" Width="40"/>
                                <GridViewColumn Header="Ajuste" DisplayMemberBinding="{Binding Path=ajusteMaquina}" Width="130"/>
                                <GridViewColumn Header="Requerido" DisplayMemberBinding="{Binding Path=requeridoOperacion}" Width="28"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <!--#endregion-->
                <!--#region lista_de_operarios-->
                <TabItem Header="Operarios">
                    <ListView x:Name="Operarios" HorizontalAlignment="Stretch"  SelectionMode="Extended" PreviewMouseLeftButtonDown="obtenerDatosListView" KeyDown="Operarios_KeyDown" FontSize="8">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Operarios" DisplayMemberBinding="{Binding Path=nombreOperario}" Width="275" />
                                <GridViewColumn Header="Asignado">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Grid.Column="4">
                                                <ProgressBar  Minimum="0" Maximum="1.01" Value="{Binding asignadoOperario}" Loaded="progressBarAsignado_Loaded" Width="100"/>
                                                <TextBlock Text="{Binding asignadoOperario, StringFormat=P1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Plana" DisplayMemberBinding="{Binding Path=planaOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Rana" DisplayMemberBinding="{Binding Path=ranaOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Flat" DisplayMemberBinding="{Binding Path=flatOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Cover" DisplayMemberBinding="{Binding Path=coverOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Trans" DisplayMemberBinding="{Binding Path=transferOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Atraca" DisplayMemberBinding="{Binding Path=atracadoraOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Plancha" DisplayMemberBinding="{Binding Path=planchaOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Bonding" DisplayMemberBinding="{Binding Path=bondingOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="ZigZag" DisplayMemberBinding="{Binding Path=zigzagOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Multi" DisplayMemberBinding="{Binding Path=multiagujaOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Manual" DisplayMemberBinding="{Binding Path=manualOperario, StringFormat=P0}"/>
                                <GridViewColumn Header="Varias" DisplayMemberBinding="{Binding Path=variasOperario, StringFormat=P0}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
                <!--#endregion-->
                <!--#region rebalance-->
                <TabItem Header="Rebalance" x:Name="pest_rebalance" >
                    <Grid>
                        <!--#region filas/columnas-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
