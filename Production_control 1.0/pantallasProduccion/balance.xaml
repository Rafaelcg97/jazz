<Page x:Class="Production_control_1._0.balance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production_control_1._0"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="balance" Background="White" Loaded="Page_Loaded">
    <Page.Resources>
        <DataTemplate x:Key="MyTemplate">
            <Border x:Name="bordeContenedor" BorderBrush="Black" BorderThickness="0.5" Background="White">
                <StackPanel x:Name="stackPanelContenedor" Height="105" Width="180" AllowDrop="True" Drop="receptor" Background="Transparent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Background="Transparent" Height="15">
                        <RadioButton x:Name="Green" Background="Green" Checked="ColorEstacion" />
                        <RadioButton x:Name="Orange" Background="Orange" Checked="ColorEstacion"/>
                        <RadioButton x:Name="Yellow" Background="Yellow" Checked="ColorEstacion"/>
                        <RadioButton x:Name="Red" Background="red" Checked="ColorEstacion"/>
                        <RadioButton x:Name="Blue" Background="blue" Checked="ColorEstacion"/>
                        <RadioButton x:Name="White" Background="white" Checked="ColorEstacion"/>
                        <TextBox Width="55" Height="14" BorderThickness="1" Margin="34,0,0,0" MaxLength="10" />
                    </StackPanel>
                    <Separator Margin="0" Background="Black"/>
                    <TextBlock Padding="0" Height="0" Text="" Visibility="Hidden"/>
                    <TextBox x:Name="txtAjuste" Height="15" Width="180" BorderThickness="0" Background="Transparent" IsReadOnly="True"/>
                    <Separator Margin="0" Background="Black"/>
                    <ListBox Background="Transparent" Padding="-5,1,-5,0" Height="55" Width="180" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch" FontSize="8"  MouseDoubleClick="eliminarItem" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Background="Transparent" Padding="0" Margin="0" Grid.Column="0" Grid.ColumnSpan="1" Foreground="Black" Content="{Binding tituloOperacion}"/>
                                    <TextBox Background="White" Margin="0,0,5,0"  Grid.Column="1" Grid.ColumnSpan="1"  Foreground="Black" Text="{Binding asignadoOperacion, StringFormat=P0}"  LostFocus="AsignadoPorOperacion" KeyDown="soloNumerosDecimales"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Separator Margin="0" Background="Black"/>
                    <Label  Content="" Height="15" FontSize="9"  Padding="0"  MouseDoubleClick="Label_MouseDoubleClick" VerticalContentAlignment="Top"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <!--#region  region control general del programa-->
        <StackPanel VerticalAlignment="Top">
            <Grid Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0" >
                    <Button x:Name="ButtonOpen" HorizontalAlignment="Left" Height="35" Width="35" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="Gray" Click="ButtonOpen_Click">
                        <materialDesign:PackIcon Kind="Menu" Foreground="#FF313131"/>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!--#endregion-->
        <!--#region menuLateral-->
        <Grid x:Name="GridMenu" Width="250" HorizontalAlignment="Left" Margin="-250,-38,0,0" Background="Black" RenderTransformOrigin="0.5,0.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonClose" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" Background="Transparent" BorderBrush="Transparent" Width="30" Height="30" Margin="0,37,0,0" Padding="0" Click="ButtonClose_Click" >
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
            <Label Grid.Row="1" Grid.ColumnSpan="4" FontSize="20" Foreground="White" Content="Últimas Versiones" HorizontalAlignment="Center"/>
            <ItemsControl x:Name="UltimasVersiones" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4" Background="#FF22242C" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="modulo_orden" Content="{Binding Path=modulo}" Grid.ColumnSpan="4" FontWeight="Bold" Grid.Column="0"  Foreground="AliceBlue" />
                            <Label x:Name="modulo_prio" Content="{Binding Path=fechaModificacion}" Grid.ColumnSpan="3" Grid.Column="4" Foreground="AliceBlue" />
                            <Label x:Name="maquina_prio" Content="{Binding Path=version}" Grid.ColumnSpan="2" Grid.Column="7"  Foreground="AliceBlue" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Grid.Row="4" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4">
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" Content="Estilo:" FontWeight="Bold" Foreground="White" Width="100"/>
                    <Label  x:Name="LabelEstiloGuardar"  FontSize="15"  Content="----" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" Content="Temporada:" FontWeight="Bold" Foreground="White" Width="100"/>
                    <Label  x:Name="LabelTemporadaGuardar"  FontSize="15"  Content="----" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" Content="Módulo:" FontWeight="Bold" Foreground="White" Width="100"/>
                    <Label  x:Name="LabelModuloGuardar"  FontSize="15"  Content="----" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" Content="Versión:" FontWeight="Bold" Foreground="White" Width="100"/>
                    <Label  x:Name="LabelVersionGuardar"  FontSize="15"  Content="----" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </StackPanel>
            <PasswordBox x:Name="passWordBoxUsuario" Grid.Row="6" Grid.ColumnSpan="4" VerticalAlignment="Center" MaxHeight="30" MinHeight="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" PasswordChanged="passWordBoxUsuario_PasswordChanged"/>
            <Button x:Name="ButtonGuardarBalance" Margin="0,0,0,10" Grid.Row="7" Grid.Column="0" Background="Transparent" Grid.ColumnSpan="4" Grid.RowSpan="1" Click="ButtonGuardarBalance_Click" IsEnabled="False" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/PantallasProduccion/imagenes/disquete.png" Height="40" Margin="0,0,35,0"/>
                    <Label FontSize="20" Foreground="White" Content="Guardar" VerticalAlignment="Center" Padding="0"/>
                </StackPanel>
            </Button>
            <Button x:Name="ButtonImprimirBalance" Margin="0,10,0,0" Grid.Row="8" Grid.Column="0" Background="Transparent" Grid.ColumnSpan="4" Grid.RowSpan="1" Click="ButtonImprimirBalance_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/PantallasProduccion/imagenes/impresora.png" Height="50" Margin="0,0,35,0"/>
                    <Label FontSize="20" Foreground="White" Content="Imprimir" VerticalAlignment="Center" Padding="0"/>
                </StackPanel>
            </Button>
            <Button Margin="0,20,0,20" Grid.Row="9" Grid.Column="0" Background="Transparent" Grid.ColumnSpan="4" Grid.RowSpan="1" x:Name="ButtonCerrarBalance" Click="ButtonCerrarBalance_Click" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/PantallasProduccion/imagenes/salir.png" Margin="0,0,30,0" />
                    <Label FontSize="17" Foreground="White" Content="Salir de Editor" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
        <!--#endregion-->
        <!--#region areaDeTrabajo-->
        <Grid Margin="5,30,0,5" x:Name="GridBackground">
            <!--#region filas/columnas-->
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
