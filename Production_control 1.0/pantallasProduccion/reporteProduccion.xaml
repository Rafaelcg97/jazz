<Page x:Class="Production_control_1._0.pantallasProduccion.reporteProduccion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production_control_1._0.pantallasProduccion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="reporteProduccion" Background="#FF383B42" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="20" Grid.RowSpan="2" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30" Content="Reporte Hora a Hora" Foreground="#FFA89C22"/>
        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" Content="Módulo" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="1" Content="Arteria" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="1" Content="Hora" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <ComboBox x:Name="comboBoxModulo" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15" IsTextSearchEnabled="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding modulo}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="comboBoxArteria" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15" IsTextSearchEnabled="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding arteria}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="comboBoxHora" Grid.Row="4" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15" IsTextSearchEnabled="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding hora}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Op. Costura" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Op. Manuales" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="6" Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Incapacitados" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <TextBox x:Name="TextBoxCostura" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <TextBox x:Name="TextBoxManuales" Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <TextBox x:Name="TextBoxIncapacitados" Grid.Row="7" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <Label Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Permisos" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Cita ISSS" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <Label Grid.Row="9" Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="1" Content="Inasistencia" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" />
        <TextBox x:Name="TextBoxPermisos" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <TextBox x:Name="TextBoxCita" Grid.Row="10" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <TextBox x:Name="TextBoxInasistencia" Grid.Row="10" Grid.Column="7" Grid.ColumnSpan="2" Grid.RowSpan="1" FontSize="15"/>
        <CheckBox x:Name="checkBoxCustom" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="3" Content="     Custom" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="checkBoxCambio" Grid.Row="12" Grid.Column="4" Grid.ColumnSpan="3" Content="     Cambio" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="checkBoxExtra" Grid.Row="12" Grid.Column="7" Grid.ColumnSpan="3" Content="     Extra" FontSize="15" Padding="0" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <ListView  x:Name="listViewLotes" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="17" Grid.RowSpan="3" HorizontalAlignment="Stretch" FontSize="10" SelectionMode="Extended">
                <ListView.View>
                <GridView>
                    <GridViewColumn Header="Lote" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                <ComboBox x:Name="ComboBoxListaDeLotes" IsTextSearchEnabled="True" ItemsSource="{Binding Path=lote}"/>
                            </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    <GridViewColumn Header="Empaque" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox x:Name="ComboBoxListaDeEmpaques" IsTextSearchEnabled="True" ItemsSource="{Binding Path=lote}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="SAM" DisplayMemberBinding="{Binding Path=tituloOperacion}" Width="50" />
                    <GridViewColumn Header="Paro" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxParo" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Motivo" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox x:Name="ComboBoxMotivo" IsTextSearchEnabled="True" ItemsSource="{Binding Path=lote}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="2XS" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBox2XS" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="XS" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxXS" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="S" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxXS" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="M" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxM" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="L" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxL" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="XL" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBoxXL" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="2XL" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBox2XL" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="1X" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBox1X" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="2X" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBox2X" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="3X" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox x:Name="TextBox3X" Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
                </ListView.View>
            </ListView>
    </Grid>
</Page>
