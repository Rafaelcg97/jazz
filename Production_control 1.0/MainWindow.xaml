            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="20" Grid.ColumnSpan="40"  x:Name="main" Margin="0,0,0,0" NavigationUIVisibility="Hidden" Width="auto" Height="auto"/>
