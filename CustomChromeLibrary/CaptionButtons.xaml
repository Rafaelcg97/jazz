<UserControl x:Class="CustomChromeLibrary.CaptionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:ccl="clr-namespace:CustomChromeLibrary"
			 xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"
             mc:Ignorable="d" 
             >
	<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="{Binding Path=CaptionButtonMargin}">
		<ccl:MinimizeButton Background="Transparent" Margin="0,10,0,0" BorderThickness="0"/>
        <ccl:MaximizeButton Background="Transparent" Margin="0,10,0,0" BorderThickness="0"/>
        <ccl:CloseButton Background="Transparent" Margin="0,10,0,0" BorderThickness="0"/>
	</StackPanel>
</UserControl>
